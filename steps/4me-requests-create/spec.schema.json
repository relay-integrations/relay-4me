{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "connection": {
      "type": "object",
      "description": "A Relay 4me connection to use",
      "properties": {
        "host": {
          "type": "string",
          "description": "4me instance host"
        },
        "accessToken": {
          "type": "string",
          "description": "4me access token"
        },
        "account": {
          "type": "string",
          "description": "4me account id"
        }
      },
      "required": [
        "host",
        "accessToken",
        "account"
      ]
    }
  },
  "request": {
    "type": "object",
    "description": "The 4me request object",
    "properties": {
      "subject": {
        "type": "string",
        "description": "Subject of the request"
      },
      "category": {
        "type": "string",
        "description": "Category of the request (e.g. incident)"
      },
      "impact": {
        "type": "string",
        "description": "Impact of the request (e.g. low)"
      },
      "service_instance_id": {
        "type": "integer",
        "description": "Service instance for the request"
      }
    },
    "required": [
      "subject",
      "impact"
    ]
  },
"additionalProperties": false
}